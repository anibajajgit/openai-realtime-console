modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "NODE_ENV=production node server.js"]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "rm -rf dist && mkdir -p dist/client dist/server && npm run build"]

[[ports]]
localPort = 3000
externalPort = 80

# Disable HMR in production to avoid WebSocket connection issues

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 39135222

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
